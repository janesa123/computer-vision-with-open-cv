import cv2
import numpy as np
from google.colab.patches import cv2_imshow
image = cv2.imread("/content/cv exp1.a.jpeg")
if image is None:
    raise FileNotFoundError("Image not found")
tx, ty = 100, 10
trans_mat = np.float32([[1, 0, tx],
                        [0, 1, ty]])
height, width = image.shape[:2]
moved_img = cv2.warpAffine(image, trans_mat, (width, height))
cv2_imshow(image)
cv2_imshow(moved_img)
